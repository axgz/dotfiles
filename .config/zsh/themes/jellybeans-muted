export THEME_COLOURS_TMUX_WINDOW_ACTIVE_BG=$accent_2
export THEME_COLOURS_TMUX_WINDOW_ACTIVE_FG=$accent_3

# https://github.com/sharkdp/vivid
export LS_COLORS="$(vivid generate jellybeans)"

